@model List<Product>
<h2> List of Products </h2>
<a asp-asp-controller="Product" asp-action="Create">Add New Product</a>
<table>
    <tr>
        <td> Name of the Product </td>
        <td> </td>
        <td> Price of the Product </td>
        <td> </td>
       
        <td> Actions </td>
     
    </tr>
    @foreach(Product product in Model)
    {
        <tr>
            <td> @product.Name </td>
            <td> </td>
            <td> @product.Price </td>
            <td> </td>
            <td>
                <a asp-controller="Product" asp-action="Details" asp-route-productId="@product.ProductId"> Details </a>
                <a asp-controller="Product" asp-action="Edit" asp-route-productId="@product.ProductId"> Edit </a>
                <a asp-controller="Product" asp-action="Delete" asp-route-productId="@product.ProductId"> Delete </a>

            </td>        
        </tr>
    }
</table>
